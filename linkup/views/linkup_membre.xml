<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="linkup_membre_view_form" model="ir.ui.view">
        <field name="name">linkup_membre_form</field>
        <field name="model">linkup.membre</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="energy" />
                    </group>
                    <group>
                        <field name="name" />
                    </group>
                    <group>
                        <field name="review_id" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="linkup_membre_view_graph" model="ir.ui.view">
        <field name="name">linkup_membre_graph</field>
        <field name="model">linkup.membre</field>
        <field name="arch" type="xml">
            <graph string="Linkup membre">
                <field name="name" type="row" />
                <field name="energy" type="measure" />
                <field name="review_id" type="row" />
            </graph>
        </field>
    </record>

    <record id="linkup_membre_view_kanban" model="ir.ui.view">
        <field name="name">linkup_membre_kanban</field>
        <field name="model">linkup.membre</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <field name="energy" />
                <field name="review_id" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="energy" />
                                        </strong>
                                    </li>
                                    <li class="mb4">
                                        <strong>
                                            <field name="review_id" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="linkup_membre_view_pivot" model="ir.ui.view">
        <field name="name">linkup_membre_pivot</field>
        <field name="model">linkup.membre</field>
        <field name="arch" type="xml">
            <pivot string="Linkup membre">
                <field name="name" type="row" />
                <field name="energy" type="measure" />
                <field name="review_id" type="row" />
            </pivot>
        </field>
    </record>

    <record id="linkup_membre_view_search" model="ir.ui.view">
        <field name="name">linkup_membre_search</field>
        <field name="model">linkup.membre</field>
        <field name="arch" type="xml">
            <search string="Linkup membre">
                <filter domain="[('name','!=',False)]" name="name" string="Name" />
                <filter domain="[('energy','!=',False)]" name="energy" string="Energy" />
                <filter domain="[('review_id','!=',False)]" name="review_id" string="" />
            </search>
        </field>
    </record>

    <record id="linkup_membre_view_tree" model="ir.ui.view">
        <field name="name">linkup_membre_tree</field>
        <field name="model">linkup.membre</field>
        <field name="arch" type="xml">
            <tree>
                <field name="energy" />
                <field name="name" />
                <field name="review_id" />
            </tree>
        </field>
    </record>

    <act_window
        id="linkup_membre_linkup_membre_action_window"
        name="Linkup membre"
        res_model="linkup.membre"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
