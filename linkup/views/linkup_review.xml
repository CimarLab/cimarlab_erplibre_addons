<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="linkup_review_view_form" model="ir.ui.view">
        <field name="name">linkup_review_form</field>
        <field name="model">linkup.review</field>
        <field name="arch" type="xml">
            <form string="Titre">
                <sheet>
                    <group>
                        <field name="name" />
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="linkup_review_view_graph" model="ir.ui.view">
        <field name="name">linkup_review_graph</field>
        <field name="model">linkup.review</field>
        <field name="arch" type="xml">
            <graph string="Linkup review">
                <field name="name" type="row" />
            </graph>
        </field>
    </record>

    <record id="linkup_review_view_kanban" model="ir.ui.view">
        <field name="name">linkup_review_kanban</field>
        <field name="model">linkup.review</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="name" />
                <templates>
                    <t t-name="kanban-box">
                        <div t-attf-class="oe_kanban_global_click">
                            <div class="oe_kanban_details">
                                <ul>
                                    <li class="mb4">
                                        <strong>
                                            <field name="name" />
                                        </strong>
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="linkup_review_view_pivot" model="ir.ui.view">
        <field name="name">linkup_review_pivot</field>
        <field name="model">linkup.review</field>
        <field name="arch" type="xml">
            <pivot string="Linkup review">
                <field name="name" type="row" />
            </pivot>
        </field>
    </record>

    <record id="linkup_review_view_search" model="ir.ui.view">
        <field name="name">linkup_review_search</field>
        <field name="model">linkup.review</field>
        <field name="arch" type="xml">
            <search string="Linkup review">
                <filter domain="[('name','!=',False)]" name="name" string="Comment" />
            </search>
        </field>
    </record>

    <record id="linkup_review_view_tree" model="ir.ui.view">
        <field name="name">linkup_review_tree</field>
        <field name="model">linkup.review</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name" />
            </tree>
        </field>
    </record>

    <act_window
        id="linkup_review_linkup_review_action_window"
        name="Linkup review"
        res_model="linkup.review"
        view_mode="kanban,tree,pivot,graph,form"
    />
</odoo>
