<odoo>
    <!-- Snippets -->
    <template id="s_cimar_snippet" name="Cimar Snippet">
        <section class="o_cimar_snippet">
            <div class="container">
                <div class="text-center cimar_snippet_value">Hello</div>
            </div>
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="cimar_snippet.s_cimar_snippet" t-thumbnail="/cimar_snippet/static/description/icon.png" />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/cimar_snippet/static/src/scss/cimar_snippet.scss" />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/cimar_snippet/static/src/js/website.cimar_snippet.animation.js" />
        </xpath>
    </template>
</odoo>
