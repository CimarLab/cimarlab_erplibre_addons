<odoo>
    <!-- Snippets -->
    <template id="s_cimarlab_demo_website_snippet" name="Cimarlab Demo Website Snippet">
        <section class="o_cimarlab_demo_website_snippet">
            <div class="container">
                <div class="text-center cimarlab_demo_website_snippet_value">Hello</div>
            </div>
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t
                t-snippet="cimarlab_demo_website_snippet.s_cimarlab_demo_website_snippet"
                t-thumbnail="/cimarlab_demo_website_snippet/static/description/icon.png"
            />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link
                rel="stylesheet"
                type="text/scss"
                href="/cimarlab_demo_website_snippet/static/src/scss/cimarlab_demo_website_snippet.scss"
            />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script
                type="text/javascript"
                src="/cimarlab_demo_website_snippet/static/src/js/website.cimarlab_demo_website_snippet.animation.js"
            />
        </xpath>
    </template>
</odoo>
