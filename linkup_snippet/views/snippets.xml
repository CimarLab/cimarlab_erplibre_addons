<odoo>
    <!-- Snippets -->
    <template id="s_linkup_snippet" name="Linkup Snippet">
        <section class="o_linkup_snippet">
            <div class="container">
                <div class="text-center linkup_snippet_value">Hello</div>
            </div>
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippets" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="linkup_snippet.s_linkup_snippet" t-thumbnail="/linkup_snippet/static/description/icon.png" />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/linkup_snippet/static/src/scss/linkup_snippet.scss" />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/linkup_snippet/static/src/js/website.linkup_snippet.animation.js" />
        </xpath>
    </template>
</odoo>
