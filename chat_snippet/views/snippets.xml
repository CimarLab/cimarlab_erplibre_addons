<odoo>
    <!-- Snippets -->
    <template id="s_chat_snippet" name="Chat Snippet">
        <section class="o_chat_snippet">
            <div class="container">
                <div class="text-center chat_snippet_value">Hello</div>
            </div>
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="chat_snippet.s_chat_snippet" t-thumbnail="/chat_snippet/static/description/icon.png" />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/chat_snippet/static/src/scss/chat_snippet.scss" />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/chat_snippet/static/src/js/website.chat_snippet.animation.js" />
        </xpath>
    </template>
</odoo>
