<odoo>
    <!-- Snippets -->
    <template id="s_chat_snippet" name="Chat Snippet">
        <section class="o_chat_snippet">
<div class="container d-flex justify-content-center">
  <div class="card mt-5">
    <div class="d-flex flex-row justify-content-between p-3 adiv text-white">
      <span class="pb-3">name of recipient</span>
      <i class="fas fa-times"></i>
    </div>
      <div class="d-flex flex-row p-3">
        <img src="https://img.icons8.com/color/48/000000/circled-user-female-skin-type-7.png" width="30" height="30"/>
        <div class="chat ml-2 p-3">Hello </div>
      </div>

      <div class="d-flex flex-row p-3">
        <div class="bg-white mr-2 p-3"><span class="text-muted">Hello</span></div>
        <img src="https://img.icons8.com/color/48/000000/circled-user-male-skin-type-7.png" width="30" height="30"/>
      </div>

      <div class="d-flex flex-row p-3">
        <img src="https://img.icons8.com/color/48/000000/circled-user-female-skin-type-7.png" width="30" height="30"/>
        <div class="chat ml-2 p-3"><span class="text-muted dot">. . .</span></div>
      </div>

      <div class="form-group px-3">
        <textarea class="form-control" rows="5" placeholder="Type your message"></textarea>
      </div>
  </div>
</div>
        </section>
    </template>
    <!-- Add snippets to menu -->
    <template id="snippet_effect" inherit_id="website.snippets">
        <xpath expr="//div[@id='snippet_effect']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="chat_snippet.s_chat_snippet" t-thumbnail="/chat_snippet/static/description/icon.png" />
        </xpath>
    </template>
    <!-- Add stylesheet and Javascript -->
    <template id="assets_frontend" inherit_id="website.assets_frontend">
        <xpath expr="//link[last()]" position="after">
            <link rel="stylesheet" type="text/scss" href="/chat_snippet/static/src/scss/chat_snippet.scss" />
        </xpath>
        <xpath expr="//script[last()]" position="after">
            <script type="text/javascript" src="/chat_snippet/static/src/js/website.chat_snippet.animation.js" />
        </xpath>
    </template>
</odoo>
